.block {
	position: relative;
	background-color: white;
	margin-bottom: 15px;
	height: 490px;

	@media only screen and (min-width: 730px) {
		& {
			height: 540px;
			margin-right: var(--paddingB);
			margin-left: var(--padding);
			margin-bottom: var(--paddingAlt);
			width: 100%;
			/* width: calc(50% - var(--padding) - var(--paddingB)); */
		}

		&:first-child {
			margin-left: var(--paddingB);
			margin-right: var(--padding);
		}
	}

	@media only screen and (min-width: 1070px) {
		& {
			margin-right: var(--paddingBSmall);
			margin-bottom: var(--paddingAlt-b);
			margin-left: var(--paddingSmall);
			width: 100%;
			height: 630px;
		}

		&:first-child {
			margin-right: var(--padding);
			margin-left: var(--paddingB);
		}
	}

	&.is__high {
		height: 100vh;
	}

	&.is__banner {
		width: 100%;
		height: 75vh;
		min-height: 600px;
		margin-left: 0;
		margin-right: 0;
	}

	&.is__fullscreen {
		width: 100%;
		height: 100vh;

		@media only screen and (min-width: 730px) {
			& {
				width: calc(100% - 2 * var(--paddingB));
				margin: 0 var(--paddingB) var(--paddingAlt) var(--paddingB);
			}
		}

		@media only screen and (min-width: 1070px) {
			& {
				margin: 0 var(--paddingBSmall) var(--paddingAlt-b) var(--paddingBSmall);
				width: calc(100% - 2 * var(--paddingBSmall));
			}
		}
	}
}
