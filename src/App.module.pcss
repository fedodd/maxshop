.title {
	color: red;
}

.titleWrapper {
	background-color: var(--color-green);

	& .title {
		color: var(--color-red);
	}
}

.content {
	display: flex;
	flex-wrap: wrap;

	/* padding: var(--paddingTop) var(--paddingSide) 0 var(--paddingSide); */
}

.blockWrapper {
	width: 100%;
	display: flex;
	flex-direction: column;
	overflow: hidden;

	@media only screen and (min-width: 768px) {
		& {
			flex-direction: row;
		}
	}
}

.footer {
	background-color: #f5f5f7;
	height: 750px;
}
